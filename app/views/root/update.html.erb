<%= render "header" %>
<form method="POST" action="/updateform">
<input type="hidden" value="<%= @id %>" name="id"/>
    <%= token_tag %>
    <div class="col-md-6" style="margin: 0 auto;">
      <div class="mb-3 col-md-6">
        <label for="textid" class="form-label" >Title</label>
        <input type="text" value="<%= @title %>"  name="title" id="titleid" class="form-control" placeholder="Your Name Here...">
      </div>
      <div class="mb-3">
        <label for="descriptionid" class="form-label">Description</label>
        <textarea name="description" id="descriptionid" class="form-control" rows="3"><%= @description %></textarea>
      </div>
      <div class="mb-3">
      <input type="submit" class="btn btn-primary" value="Update" style="display: block; margin: 0 auto"/>
      </div>
      
    </div>
</form>